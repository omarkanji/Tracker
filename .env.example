# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database

# Twilio Configuration (for WhatsApp)
# Get these from https://console.twilio.com
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
# Your WhatsApp number (with country code, no spaces or dashes)
WHATSAPP_TO=whatsapp:+1234567890

# Server Configuration
PORT=3000
NODE_ENV=development
# Update this with your deployed URL when in production
BASE_URL=http://localhost:3000

# Timezone - Set to your local timezone
# Examples: America/New_York, America/Los_Angeles, America/Chicago, Europe/London
# Full list: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TZ=America/New_York
